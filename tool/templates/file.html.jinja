{% extends "base.html.jinja" %}
{% block title %}Single File{% endblock %}
{% block content %}
    <h1>
        <span class="glyphicon glyphicon-file" aria-hidden="true"></span>
        {% for ancestor in file.folder.ancestors | reverse %}
            <a href="{{ ancestor | symbol_url }}">{{ ancestor.name }}</a>{{ SLASH }}
        {% endfor %}

        <a href="{{ file.folder | symbol_url }}">{{ file.folder.name }}</a>{{ SLASH }}
        {{ file.name }}
    </h1>
    <h2>Functions</h2>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code Size</th>
                <th>Stack Size</th>
            </tr>
        </thead>
        <tbody>
            {% for symbol in file.functions %}
            <tr>
                <td><a href="{{ symbol | symbol_url }}">{{ symbol.name }}</a></td>
                <td>{{ symbol.size }}</td>
                <td>{{ symbol.stack_size }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    {% if file.variables | length <= 0 %}
    <h2>No Static Variables</h2>
    {% else %}
    <h2>Static Variables</h2>
    <ul>
    {% for symbol in file.variables[:10] %}
        <li><a href="{{ symbol|symbol_file_url }}">{{ symbol.name|e }} {{ '(%d)' % symbol.size if symbol.size}}</a></li>
    {% endfor %}
    </ul>
    {% endif %}



{% endblock %}